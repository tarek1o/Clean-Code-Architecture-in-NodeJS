generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       Int      @id @default(autoincrement())
    username String   @unique
    email    String   @unique
    password String
    posts    Post[]   @relation("UserPosts")
}

model Post {
    id        Int      @id @default(autoincrement())
    title     String
    content   String
    authorId  Int
    author    User     @relation("UserPosts", fields: [authorId], references: [id])
}